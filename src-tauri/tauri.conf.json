{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri_tray_app",
  "version": "0.1.0",
  "identifier": "com.dayda.tauri_tray_app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "tauri_tray_app",
        "width": 800,
        "height": 600
      },
      {
        "label": "settings",
        "title": "Settings",
        "width": 1100,
        "height": 700,
        "visible": false,
        "url": "settings.html"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:window:default",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:tray:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources"
    ]
  }
}